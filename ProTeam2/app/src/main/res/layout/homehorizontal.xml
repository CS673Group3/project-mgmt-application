<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorbackground"
    android:screenOrientation="landscape"
    android:gravity="center">

    <ImageButton
        android:layout_width="380dp"
        android:layout_height="37dp"
        android:id="@+id/SignUp"
        android:background="@drawable/elementshorizontal"
        android:src="@mipmap/ic_signup"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="380dp"
        android:layout_height="37dp"
        android:id="@+id/SignIn"
        android:background="@drawable/elementshorizontal"
        android:src="@mipmap/ic_signin"
        android:scaleType="center"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/SignUp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_image0"

        android:layout_alignLeft="@+id/SignUp"
        android:layout_alignStart="@+id/SignUp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/SignUp"
        android:layout_alignEnd="@+id/SignUp"
        android:layout_alignRight="@+id/SignUp"
        android:layout_alignParentTop="true" />


</RelativeLayout>