<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
   <LinearLayout
       android:id="@+id/BackLayout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="10dp">
    <ImageButton
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_SignIn"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/back"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        android:background="@color/white"
        />
       </LinearLayout>
    <LinearLayout
        android:id="@+id/Names"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="20dp"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginTop="10dp"
        >
    <TextView
        android:id="@+id/firstname"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/person_firstname"
        />
    <TextView
        android:id="@+id/lastname"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/person_lastname"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Names_Inserts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="20dp"

        android:gravity="left|center_horizontal"

        >
    <EditText
        android:id="@+id/firstname_Input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/firstname_hint"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/lastname_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/lastname_hint"
        android:inputType="textPersonName"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/passwordLabels"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="2"
        android:gravity="left|center_vertical">
   <TextView
        android:id="@+id/PassLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       android:layout_weight="1"
        android:text="@string/password"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black"
        />
  <TextView
        android:id="@+id/ConfirmLabel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/confirmPassword"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black"
        android:gravity="left|center_vertical"
      />
    </LinearLayout>
   <LinearLayout
       android:id="@+id/passwordInputs"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:padding="20dp"
       android:weightSum="2"
       android:gravity="left|center_vertical"
       >
    <EditText
        android:id="@+id/password_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        />
      <EditText
        android:id="@+id/confirmPassword_input"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:hint="@string/confirmPassword_hint"
          android:inputType="textPassword"
        />
      </LinearLayout>
   <LinearLayout
       android:id="@+id/Email"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="20dp"
       android:weightSum="2"
       >
    <TextView
        android:id="@+id/EmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/email_hint"
        android:text="@string/person_email"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/Email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        />
</LinearLayout>
 <LinearLayout
     android:id="@+id/UserName"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:padding="20dp"
     android:weightSum="2">
    <TextView
        android:id="@+id/usernameLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/username_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username_hint"
        android:inputType="textUri"
        />
    </LinearLayout>

   <Button
        android:id="@+id/SignUpbtn"
        android:layout_width="325dp"
        android:layout_height="70dp"
        android:layout_below="@+id/password_input"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:text="@string/signUp_name"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textSize="25dp"
       android:onClick="setContentView" />
</LinearLayout>
